# --- Canonique + HTTPS en une seule étape (anti-boucle) ---
RewriteEngine On

# Toujours https://sos-monde.com (une seule redirection maxi)
RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP_HOST} !^sos-monde\.com$ [NC]
RewriteRule ^ https://sos-monde.com%{REQUEST_URI} [R=301,L]

# Type MIME pour le manifest PWA
AddType application/manifest+json .webmanifest

# Cache statique (optimisé et safe)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/javascript "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType image/* "access plus 30 days"
  ExpiresByType application/manifest+json "access plus 0 seconds"
</IfModule>

# Autoriser le service worker à la racine
<IfModule mod_headers.c>
  Header set Service-Worker-Allowed "/"
  Header always set X-Content-Type-Options "nosniff"
  Header always set Referrer-Policy "no-referrer-when-downgrade"
</IfModule>
